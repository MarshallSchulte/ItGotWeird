<% provide(:title, "Blog") %>
<div id="BlogContainer" class="container">
	<h1 id="BlogHeader" style="">Blogs</h1> <%= link_to 'New Blog', new_blog_path, class: "btn btn-default btn-lg", id: "NewBlog" %>



    <% @blogs.each do |blog| %>
	  <div id="Blog">
       <div class="row"><h1 id="BlogTitle" style="text-align:center"><%= link_to blog.title, blog %></h1></div>
        <div class="row" id="BlogContent"><%= sanitize blog.content %></div>
		<div class="row center-block" style="text-align:center;">
			<div class="col-md-1"><%= link_to 'Show', blog %></div>
			<div class="col-md-1"><%= link_to 'Edit', edit_blog_path(blog) %></div>
			<div class="col-md-1"><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></div>
		</div>
	  </div>
    <% end %>
</div>